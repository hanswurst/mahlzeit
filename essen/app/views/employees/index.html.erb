<h1>Liste der Mitarbeiter</h1>

<table>
  <tr>
    <th>Identfikationsnumer</th>
    <th>Vorname</th>
    <th>Nachname</th>
    <th>Nimmt am Essen teil</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @employees.each do |employee| %>
  <tr>
    <td><%= employee.id %></td>
    <td><%= employee.firstname %></td>
    <td><%= employee.lastname %></td>
    <td>
      <% if  employee.getsMeals %>ja
      <% else %>nein
      <% end %>
    </td>
    <td><%= link_to 'Anzeigen', employee %></td>
    <td><%= link_to 'Bearbeiten', edit_employee_path(employee) %></td>
    <td><%= link_to 'Löschen', employee, method: :delete, data: { confirm: 'Wirklich löschen?' } %></td>
  </tr>
<% end %>
</table>

<br />

