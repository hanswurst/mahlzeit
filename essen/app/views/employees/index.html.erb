<h1><%=t 'employee.list'%></h1>

<table>
  <tr>
    <th><%=t 'helpers.label.employee.id' %></th>
    <th><%=t 'helpers.label.employee.firstname' %></th>
    <th><%=t 'helpers.label.employee.lastname' %></th>
    <th><%=t 'helpers.label.employee.getsMeals' %></th>
    <th><%=t 'helpers.label.employee.guest' %></th>
    <th><%=t 'helpers.label.employee.breakfast' %></th>
    <th><%=t 'helpers.label.employee.supper' %></th>
    <th><%=t 'helpers.label.employee.number_of_children_level_1' %></th>
    <th><%=t 'helpers.label.employee.number_of_children_level_2' %></th>
    <th><%=t 'helpers.label.employee.number_of_children_level_3' %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @employees.each do |employee| %>
  <tr>
    <td><%= employee.id %></td>
    <td><%= employee.firstname %></td>
    <td><%= employee.lastname %></td>
    <td><%= employee.boolean_as_translated_string(employee.getsMeals) %></td>
    <td><%= employee.boolean_as_translated_string(employee.guest) %></td>
    <td><%= employee.boolean_as_translated_string(employee.breakfast) %></td>
    <td><%= employee.boolean_as_translated_string(employee.supper) %></td>
    <td><%= employee.number_of_children_level_1 %></td>
    <td><%= employee.number_of_children_level_2 %></td>
    <td><%= employee.number_of_children_level_3 %></td>
    <td><%= link_to t('misc.show'), employee %></td>
    <td><%= link_to t('misc.edit'), edit_employee_path(employee) %></td>
    <td><%= link_to t('misc.delete'), employee, method: :delete, data: { confirm: t('employee.delete') } %></td>
  </tr>
<% end %>
</table>

<br />

